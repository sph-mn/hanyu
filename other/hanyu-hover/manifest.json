{
  "manifest_version": 2,
  "name": "hanyu-hover",
  "version": "0.2",
  "description": "Hover to see Chinese word definitions",
  "icons": {
    "128": "icons/icon-128.png"
  },
  "permissions": ["storage", "tabs", "<all_urls>"],
  "browser_action": {
    "default_title": "hanyu-hover",
    "default_icon": "icons/toolbar-on.png"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["compiled/content.js"],
    "css": ["content.css"],
    "run_at": "document_start",
    "all_frames": true
  }],
  "web_accessible_resources": ["NotoSansSC-Light.ttf"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{944e5f40-6d61-4207-8e60-a173e1a390ba}"
    }
  }
}
